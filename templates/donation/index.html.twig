{% extends 'baseBack.html.twig' %}

{% block title %}Donation index
{% endblock %}

{% block body %}
	<h1>Donation index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>id</th>
				<th></th>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Phone Number</th>
				<th>Address</th>
				<th>Amount</th>
				<th>Actions</th>
			</tr>
		</thead>
	</tr>
</thead>
<tbody>
	{% for donation in donations %}
		<tr>
			<td>{{donation.id}}</td>
			<td>{{ donation.firstName }}</td>
			<td>{{ donation.lastName }}</td>
			<td>{{ donation.phoneNumber }}</td>
			<td>{{ donation.address }}</td>
			<td>{{ donation.amount }}</td>


			<td>
				<a href="{{ path('app_donation_back_edit', {'id': donation.id}) }}" class="btn btn-primary">Edit</a>
				<form action="{{ path('app_donation_back_delete', {'id': donation.id}) }}" method="post" style="display: inline-block;">
					<input type="hidden" name="_method" value="DELETE">
					<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ donation.id) }}">
					<button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this donation?')">Delete</button>
				</form>
			</td>
		</tr>
	{% else %}
		<tr>
			<td colspan="7">No records found</td>
		</tr>
	{% endfor %}
</tbody></table>{% endblock %}
