{% extends 'back/index.html.twig' %}

{% block title %}Application index{% endblock %}

{% block body %}
    <div class="container">
    <br>
    <br>
    <br>
        <h1>Application index</h1>

        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Firstname</th>
                        <th>Lastname</th>
                        <th>Email</th>
                        <th>PDF</th>
                    </tr>
                </thead>
                <tbody>
                    {% for application in applications %}
                        <tr>
                            <td>{{ application.id }}</td>
                            <td>{{ application.firstname }}</td>
                            <td>{{ application.lastname }}</td>
                            <td>{{ application.email }}</td>
                            <td>
                                <a href="{{ path('pdf_show', {'id': application.id}) }}" target="_blank" class="btn btn-primary mr-2">View resume</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>




<style>
.container {
    margin: 20px auto;
    max-width: 800px;
}

.table-container {
    border: 1px solid #ccc;
    border-radius: 5px;
    overflow: hidden;
}

.table {
    width: 100%;
}

.table th,
.table td {
    padding: 10px;
    text-align: left;
}

.table th {
    background-color: #f0f0f0;
    font-weight: bold;
}

.table td {
    border-top: 1px solid #ccc;
}

.table tbody tr:nth-child(even) {
    background-color: #f9f9f9;
}

.table tbody tr:hover {
    background-color: #e0e0e0;
}
</style>





{% endblock %}
