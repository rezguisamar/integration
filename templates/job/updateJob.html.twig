{% extends 'baseBack.html.twig' %}

{% block body %}

<div style="display:flex;align-items:center;justify-content: center;margin-top: 150px">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Add Form </h5>

              <!-- add Form  -->
              {{ form_start(f) }}
               
                  <label for="inputText" class="col-sm-4 col-form-label">Title</label>
                  <div class="col-sm-10">
                    {{ form_widget( f.title, {attr: {class: 'form-control'}} ) }}
                  </div>
                
                
                  <label forinputText" class="col-sm-4 col-form-label">Organisation</label>
                  <div class="col-sm-10">
                    {{ form_widget( f.org_name, {attr: {class: 'form-control'}}) }}
                  </div>
               
                
                  <label for="inputText" class="col-sm-4 col-form-label">Start Date</label>
                  <div class="col-sm-10">
                    {{ form_widget( f.start_date, {attr: {class: 'form-control'}}) }}
                  </div>


                  <label for="inputText" class="col-sm-4 col-form-label">Role</label>
                  <div class="col-sm-10">
                    {{ form_widget( f.role, {attr: {class: 'form-control'}} ) }}
                  </div>
                
                  
                  <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
                    {{ form_widget( f.add, {attr: {class: 'btn btn-primary'}} ) }}
                  </div>
                </div>
                {{ form_end(f) }}
              <!-- End General Form Elements -->

            </div>
          </div>

 </div>

{% endblock %}