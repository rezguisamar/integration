{% extends 'back/index.html.twig' %}
{% block body %}
{{ form_start(form, {'attr': {'class': 'example-wrapper'}}) }}

<style>
	.example-wrapper {
		margin: 1em auto;
		max-width: 800px;
		width: 95%;
		font: 18px / 1.5 sans-serif;
	}

	.example-wrapper code {
		background: #F5F5F5;
		padding: 2px 6px;
	}
	.container-fluid {
		background-color: #F0F8FF;
	}

	/* Add spacing between labels and input fields */
	.form-group {
		margin-bottom: 15px;
	}
	.error-message {
		color: #8B0000;
	}
</style>
<div class="card-body">
              <h5 class="card-title">Jobs Form</h5>

 
             
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Organisation</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.organisation, {'attr': {'class': 'form-control bg-light border-0', 'placeholder': 'Organisation'}}) }}
                    {{form_errors(form.organisation)}}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Title</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control bg-light border-0', 'placeholder': 'Title'}}) }}
                    {{form_errors(form.title)}}
                  </div>
                </div>
              
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">File Upload</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.picture, {'attr': {'class': 'form-control-file form-control-sm bg-light border-0', 'placeholder': 'Upload photo'}}) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputDate" class="col-sm-2 col-form-label">Date</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.startdate, {'attr': {'class': 'form-control bg-light border-0', 'placeholder': 'Start date','type': 'date'}}) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-2 col-form-label">Description</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.description, {'attr': {'class': 'form-control bg-light border-0', 'placeholder': 'Description'}}) }}
                    {{form_errors(form.description)}}
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-2 col-form-label">Add job</label>
                  <div class="col-sm-10">
                
                    <button class="btn btn-primary py-3 px-4">{{button_label|default('save')}}</button>
                  </div>
                </div>


            </div>
           
            
          </div>
 {{ form_end(form) }}
 
          {% endblock %}