{% extends 'baseBack.html.twig' %}

{% block title %}Cour{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h1 class="text-center">Cour</h1>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ cour.id }}</td>
                                </tr>
                                <tr>
                                    <th>Titre</th>
                                    <td>{{ cour.titre }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ cour.description }}</td>
                                </tr>
                                <tr>
                                    <th>Niveau</th>
                                    <td>{{ cour.niveau }}</td>
                                </tr>
                                <tr>
                                    <th>CreatedAt</th>
                                    <td>{{ cour.createdAt ? cour.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Categorie</th>
                                    <td>{{ cour.categorie }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <div class="text-center">
                            <a href="{{ path('app_cour_index_back') }}" class="btn btn-secondary mr-2">Back to list</a>
                            <a href="{{ path('app_cour_edit', {'id': cour.id}) }}" class="btn btn-primary">Edit</a>
                            {{ include('cour/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
