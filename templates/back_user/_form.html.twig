<script src="{{ asset('backOfficeAssets/vendor/chart.js/chart.umd.js') }}"></script>
<script src="{{ asset('backOfficeAssets/vendor/echarts/echarts.min.js') }}"></script>
<script src="{{ asset('backOfficeAssets/vendor/quill/quill.min.js') }}"></script>
