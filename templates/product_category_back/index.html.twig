{% extends 'baseback.html.twig' %}

{% block title %}Product Category List{% endblock %}

{% block body %}
    <h1>Product Category List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product_category in product_categories %}
            <tr>
                <td>{{ product_category.id }}</td>
                <td>{{ product_category.categoryname }}</td>
                <td>{{ product_category.categoryimage }}</td>
                <td>
                    <a href="{{ path('app_product_category_back_show', {'id': product_category.id}) }}">show</a>
                    <a href="{{ path('app_product_category_back_edit', {'id': product_category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_product_category_back_new') }}">Create new</a>
{% endblock %}
