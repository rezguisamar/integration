{% extends 'baseFront.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <form method="post">

        {{ form_start(resetForm) }}
        <div class="container-fluid quote my-5 py-5" data-parallax="scroll" data-image-src="assets/img/carousel-2.jpg">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="bg-white rounded p-4 p-sm-5 wow fadeIn" data-wow-delay="0.5s">
                            <h2 class="display-5 text-center mb-5">Reset your password</h2>
                            <p class="display-7 text-center mb-5">Please enter your new password</p>
                            <div class="row g-3">
                                <form class="row g-3 needs-validation" novalidate>
                                    <div class="col-sm-12">
                                        {{ form_row(resetForm.plainPassword,{'attr':{'type':'text','class':'form-control bg-light border-0'}}) }}
                                    </div>
                                        <button class="btn btn-primary">Reset password</button>
                                        {{ form_end(resetForm) }}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
