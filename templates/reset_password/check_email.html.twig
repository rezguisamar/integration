{% extends 'baseFront.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <form method="post">
        <div class="container-fluid quote my-5 py-5" data-parallax="scroll" data-image-src="assets/img/carousel-2.jpg">
            <div class="container py-5">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="bg-white rounded p-4 p-sm-5 wow fadeIn" data-wow-delay="0.5s">
                            <h2 class="display-5 text-center mb-5">Reset password</h2>
                            <p>
                                If an account matching your email exists, then an email was just sent that contains a
                                link that you can use to reset your password.</p>
                            <h6 style="color : red">
                                This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                            </h6>
                            <div class="col-12 text-lg-start">
                            <p>If you don't receive an email please check your spam folder or <a
                                        href="{{ path('app_forgot_password_request') }}">try again.</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </form>
{% endblock %}
