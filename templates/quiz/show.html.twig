{% extends 'baseBack.html.twig' %}

{% block title %}Quiz{% endblock %}

{% block body %}
    <h1>Quiz</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quiz.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ quiz.titre }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ quiz.createdAt ? quiz.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ quiz.duree }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ quiz.note }}</td>
            </tr>
        </tbody>
    </table>

   

    <a href="{{ path('app_quiz_edit', {'id': quiz.id}) }}">edit</a>

    {{ include('quiz/_delete_form.html.twig') }}
{% endblock %}
