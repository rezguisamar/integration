{% extends 'baseFront.html.twig' %}
{% block title %}New User{% endblock %}

{% block body %}
{{ form_start(form) }}
    {# Include the reCAPTCHA JS API script #}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="container-fluid quote my-5 py-5" data-parallax="scroll" data-image-src="assets/img/carousel-2.jpg">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="bg-white rounded p-4 p-sm-5 wow fadeIn" data-wow-delay="0.5s">
                        <h2 class="display-5 text-center mb-5">Greenta - Registration</h2>
                        {{ form_widget(form._token) }}
                            <div class="row g-3">
                                <form class="row g-3 needs-validation" novalidate>
                                    <div class="col-sm-12">
                                        {{ form_label(form.firstname)}}
                                        {{ form_widget(form.firstname,{'attr':{'class':'form-control bg-light border-0'}}) }}
                                        {{ form_errors(form.firstname)}}
                                    </div>
                                    <div class="col-sm-12">
                                        {{ form_label(form.lastname)}}
                                        {{ form_widget(form.lastname,{'attr':{'class':'form-control bg-light border-0'}}) }}
                                        {{ form_errors(form.lastname)}}
                                    </div>
                                    <div class="col-sm-12">
                                        {{ form_label(form.email)}}
                                        {{ form_widget(form.email,{'attr':{'type':'text','class':'form-control bg-light border-0'}}) }}
                                        {{ form_errors(form.email)}}
                                    </div>
                                    <div class="col-sm-12">
                                        {{ form_label(form.password.first) }}
                                        {{ form_widget(form.password.first, {'attr': {'class': 'form-control bg-light border-0'}}) }}
                                        {{ form_errors(form.password.first) }}
                                    </div>
                                    <div class="col-sm-12">
                                        {{ form_label(form.password.second) }}
                                        {{ form_widget(form.password.second, {'attr': {'class': 'form-control bg-light border-0'}}) }}
                                        {{ form_errors(form.password.second) }}
                                    </div>
                                    <div class="col-sm-12">
                                        {{ form_label(form.phone)}}
                                        {{ form_widget(form.phone,{'attr':{'class':'form-control bg-light border-0'}}) }}
                                        {{ form_errors(form.phone)}}
                                    </div>
                                    <div class="col-sm-12">
                                    {% block captcha_widget %}
                                    {{ form_widget(form.captcha) }}
                                    {% endblock %}
                                    </div>
                                    <div class="col-sm-12">
                                        {{ form_row(form.agreeTerms,{'attr': {'class': 'form-check-input'}}) }}
                                    </div>
                               <button class="btn btn-primary py-3 px-4" >{{ button_label|default('Save') }}</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Quote End -->
        {{ form_end(form) }}
{% endblock %}
