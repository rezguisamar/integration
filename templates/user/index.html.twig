{% extends 'baseBack.html.twig' %}

{% block title %}Users Dashboard{% endblock %}

{% block body %}
    <main id="main" class="main">

        <div class="Users">
            <h1>Users Tables</h1>
            <nav>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_back') }}">Home</a></li>
                    <li class="breadcrumb-item">Tables</li>
                    <li class="breadcrumb-item active">Users</li>
                </ol>
            </nav>
        </div><!-- End Page Title -->
        <section class="section">
            <div class="row">
                <div class="row-cols-lg-auto">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Users Table</h5>
                            <table class="table">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th scope="col">Firstname</th>
                                        <th scope="col">Lastname</th>
                                        <th scope="col">Email</th>
                                        <th scope="col">Role</th>
                                        <th scope="col">status</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">Actions</th>
                                        <th scope="col">BAN</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>{{ user.firstname | capitalize }}</td>
                                            <td>{{ user.lastname | capitalize }}</td>
                                            <td>{{ user.email }}</td>
                                            <td>
                                                {% if 'ROLE_ADMIN' in user.roles %}
                                                    admin
                                                {% elseif 'ROLE_USER' in user.roles %}
                                                    user
                                                {% else %}
                                                    <!-- Handle other roles if needed -->
                                                    {{ user.roles ? user.roles|json_encode : '' }}
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if user.isActive %}
                                                    active
                                                {% else %}
                                                    offline
                                                {% endif %}
                                            </td>
                                            <td>{{ user.phone }}</td>
                                            <td>
                                                <a class="btn"
                                                   onclick="return confirm('Are you sure you want to delete this user?')">{{ include('user/_delete_form.html.twig') }}</a>

                                            </td>
                                            <td>
                                                {% if not user.isBanned %}
                                                    <a type="button" class="btn btn-danger" id="confirmBanBtn" href="{{ path('app_back_user_ban', {'id': user.id}) }}">Ban</a>
                                                {% else %}
                                                    <a type="button" class="btn btn-secondary" data-dismiss="modal" href="{{ path('app_back_user_unban', {'id': user.id}) }}">Unban</a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="9">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer id="footer" class="footer">
        <div class="copyright">
            &copy; Copyright <strong><span>Greenta</span></strong>. All Rights Reserved
        </div>
    </footer>
{% endblock %}
